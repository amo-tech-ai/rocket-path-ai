{
  "env": {
    "CLAUDE_CODE_TASK_LIST_ID": "startupai16L"
  },
  "permissions": {
    "allow": [],
    "deny": []
  },
  "ignorePatterns": [
    "pm/**",
    "tasks/prompts/**",
    "tasks/data/**",
    "tasks/testing/**",
    "knowledge/**",
    "docs/plans/**",
    "archive/**",
    "*.log",
    "*.jsonl",
    "node_modules/**",
    "dist/**",
    ".next/**",
    "screenshots/**",
    "figma/**",
    ".backup*/**"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/validate-commands.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/lint-on-save.sh"
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/typecheck-async.sh",
            "async": true,
            "timeout": 60
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "compact|resume",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-context.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send 'Claude Code' 'Needs your attention' 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
